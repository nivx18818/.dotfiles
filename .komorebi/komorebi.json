{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": true,
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 6,
  "border_offset": -1,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "single_border": "Mauve",
    "unfocused_border": "Blue",
    "monocle_border": "Peach",
    "floating_border": "Yellow",
    "stack_border": "Green",
    "stackbar_background": "Surface0"
  },
  "stackbar": {
    "height": 30,
    "mode": "OnStack",
    "label": "Title",
    "tabs": {
      "width": 450,
      "font_family": "DankMono Nerd Font Mono"
    }
  },
  "animation": {
    "enabled": true,
    "fps": 120,
    "style": [0.32, 0.72, 0, 1]
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP",
          "window_container_behaviour_rules": {
            "0": "Create",
            "4": "Append"
          }
        },
        {
          "name": "2",
          "layout": "BSP",
          "window_container_behaviour_rules": {
            "0": "Create",
            "4": "Append"
          }
        },
        {
          "name": "3",
          "layout": "BSP",
          "window_container_behaviour_rules": {
            "0": "Create",
            "4": "Append"
          }
        },
        {
          "name": "4",
          "layout": "BSP",
          "window_container_behaviour_rules": {
            "0": "Create",
            "4": "Append"
          }
        },
        {
          "name": "5",
          "layout": "BSP",
          "window_container_behaviour_rules": {
            "0": "Create",
            "4": "Append"
          }
        }
      ]
    }
  ]
}
