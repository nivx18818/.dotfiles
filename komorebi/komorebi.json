{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "single_border": "Mauve",
    "unfocused_border": "Blue",
    "monocle_border": "Peach",
    "floating_border": "Yellow",
    "stack_border": "Sapphire",
    "stackbar_background": "Surface0",
    "stackbar_focused_text": "Sapphire"
  },
  "stackbar": {
    "height": 30,
    "mode": "Never",
    "label": "Title",
    "tabs": {
      "width": 450,
      "font_family": "JetBrainsMono NFP"
    }
  },
  "animation": {
    "enabled": true,
    "duration": 400,
    "fps": 120,
    "style": {
      "movement": "EaseOutBack",
      "transparency": "Linear"
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "BSP"
        },
        {
          "name": "3",
          "layout": "BSP"
        },
        {
          "name": "4",
          "layout": "BSP"
        },
        {
          "name": "5",
          "layout": "BSP"
        },
        {
          "name": "6",
          "layout": "BSP"
        },
        {
          "name": "7",
          "layout": "BSP"
        },
        {
          "name": "8",
          "layout": "BSP"
        }
      ]
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "explorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Clock",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "navicat.exe",
      "matching_strategy": "Equals"
    }
  ]
}
